            <physDesc>
              <objectDesc form="codex">
                <supportDesc material="perg">
                  <support>
                    <material>Vellum</material>
                  </support>
                  <extent>
                    <measure type="composition" unit="leaf" quantity="28">28 ff.</measure>
                    <dimensions type="leaf" unit="in">
                      <height>
                        <measure type="height" quantity="9.125" unit="in">9 1/8</measure>
                      </height>
                      <width>
                        <measure type="width" quantity="7" unit="in">7</measure>
