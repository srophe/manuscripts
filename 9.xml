                <handNote xml:id="p4handNote1" scope="major" script="syr-Syre" medium="unknown">
                  <desc>Written in a good, regular Estrangela of the <origDate notBefore="0700" notAfter="0800">8th century</origDate>. <ref target="#p4addition1">See additions.</ref></desc>
                </handNote>
                <handNote xml:id="p4handNote2" scope="minor" script="syr" medium="unknown">
                  <desc><ref target="#p4addition2">See additions.</ref></desc>
                </handNote>
                <handNote xml:id="p4handNote3" scope="minor" script="syr" medium="unknown">
