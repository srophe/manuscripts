              <handDesc hands="">
                <handNote xml:id="p7handNote1" scope="major" script="syr-Syre" medium="unknown">
                  <desc>This manuscript is beautifully written, in a large, regular Estrangela of the <origDate notBefore="500" notAfter="700">6th or 7th century</origDate>.</desc>
                </handNote>
                <handNote xml:id="p7handNote2" scope="minor" script="syr-Syrn" medium="unknown">
