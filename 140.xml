              <handDesc hands="5">
                <handNote xml:id="handNote1" scope="major" script="syr-Syre" medium="unknown">
                   <desc>The writing is a good, regular Estrangela of the <origDate notBefore="0600" notAfter="0700">7th century</origDate>.</desc>
                </handNote>
                 <handNote xml:id="handNote2" scope="minor" script="syr" medium="unknown">
